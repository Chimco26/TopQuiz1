<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contoller.GameActivity"
    android:orientation="vertical"
    android:weightSum="8">

    <TextView
        android:id="@+id/activity_game_text_question"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="80dp"
        android:textColor="#A91FC8"
        android:text="Question?"
        />

    <Button
        android:id="@+id/activity_game_button_answer1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="Answer1"
        android:textColor="#D52121"
        />

    <Button
        android:id="@+id/activity_game_button_answer2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="Answer2"
        android:textColor="#D52121"
        />

    <Button
        android:id="@+id/activity_game_button_answer3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="Answer3"
        android:textColor="#D52121"
        />

    <Button
        android:id="@+id/activity_game_button_answer4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="Answer4"
        android:textColor="#D52121"
        />

</LinearLayout>